<div class="container">
  <div class="jumbotron">
    <ol class="breadcrumb">
      <li><%= item.category %></li>
      <li><%= item.subCategory %></li>
    </ol>
    <br/>
    <h1><%= item.title %></h1>
    <div style="border:1px solid gray;width:300px;margin-left:auto;margin-right:auto;"  id="preview">
      <img src="<%= item.imageUrl %>" style="width:300px;" />
    </div>
    <h2><%= item.description %></h2>
    <br/>
    <p>Price: </p><p><%= item.price %></p>
    <p>Quantity: </p><p><%= item.quantity %></p>
    <a href="/saleItem/buy" class="btn btn-lg btn-success">Get it!</a>
  </div>
</div>
